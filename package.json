{
  "name": "guix",
  "version": "0.0.2",
  "description": "A Cool, Prop-based UI Library for ReactJS",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "prepare": "husky install",
    "build-format": "prettier --write src/**/*.{ts,tsx}",
    "build-lint": "eslint --fix src/**/*.{ts,tsx}",
    "build-test": "jest",
    "build-build": "tsc",
    "build": "bash build.sh",
    "test": "jest",
    "transpile": "tsc --noEmit",
    "lint": "eslint --ext .ts,.tsx ./src",
    "format": "pretty-quick --staged",
    "publish": "bash publish.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nawaazkortiwala/guix.git"
  },
  "keywords": [
    "guix",
    "ui",
    "reactjs"
  ],
  "author": "Nawaaz Kortiwala <nawaazkortiwala@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/nawaazkortiwala/guix/issues"
  },
  "homepage": "https://github.com/nawaazkortiwala/guix#readme",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.0.7"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.2",
    "@testing-library/jest-dom": "^6.0.1",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/react-test-renderer": "^18.0.0",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "csstype": "^3.1.2",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "^0.20.0",
    "husky": "^8.0.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "jest-styled-components": "^7.1.1",
    "prettier": "2.8.8",
    "pretty-quick": "^3.1.3",
    "react-test-renderer": "^18.2.0",
    "rollup": "^3.28.0",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typescript": "^5.1.6"
  }
}
